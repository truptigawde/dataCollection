<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundGray"
    android:focusableInTouchMode="true"
    tools:context=".fragments.LogbookFragment">

    <TextView
        android:id="@+id/txtNoDataLogbook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Logbook data not avaialble"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/sessionListLogbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/White"
        android:divider="@color/BackgroundGray"
        android:dividerHeight="2dp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/llExpandedViewLogbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">

        <TextView
            android:id="@+id/val_Logbook_SessionDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="5 April 2018"
            android:textColor="@color/Black"
            android:textSize="24sp" />

        <TableLayout
            android:id="@+id/tableLogbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/val_Logbook_SessionDate"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/Transparent"
            android:stretchColumns="*">

            <TableRow android:layout_width="0dp">

                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/TableColumnRowHeaderGray"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="Clinic"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/TableColumnRowHeaderGray"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="Queries"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/TableColumnRowHeaderGray"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="Draft"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/TableColumnRowHeaderGray"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="Submitted"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/TableColumnRowHeaderGray"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="Men"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginBottom="5dp"
                    android:background="@color/TableColumnRowHeaderGray"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="Women"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow android:layout_width="0dp">

                <TextView
                    android:id="@+id/val_Logbook_Clinic"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/White"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/val_Logbook_Queries"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/White"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/val_Logbook_Draft"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/White"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/val_Logbook_Submitted"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/White"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/val_Logbook_Men"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/White"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/val_Logbook_Women"
                    android:layout_marginBottom="5dp"
                    android:background="@color/White"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/tvSendSMSHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tableLogbook"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/TableColumnRowHeaderGray"
            android:paddingBottom="7.5dp"
            android:paddingTop="7.5dp"
            android:text="Send logbook via SMS"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSendSMSHeader"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/White"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:stretchColumns="0">

                <TableRow android:layout_width="0dp">

                    <EditText
                        android:id="@+id/etLogbookPhoneNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="30dp"
                        android:background="@layout/my_edit_text_border"
                        android:hint="09878142298"
                        android:paddingBottom="12.5dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="12.5dp"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnLogbookFindContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:background="@color/ButtonOrange"
                        android:drawableLeft="@drawable/ic_search"
                        android:drawablePadding="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="Find contact"
                        android:textAllCaps="false"
                        android:textSize="20sp" />
                </TableRow>
            </TableLayout>

            <EditText
                android:id="@+id/etLogbookSMSMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@layout/my_edit_text_border"
                android:gravity="top"
                android:minHeight="140dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="Clinic logbook 5 April 2018: 0 Women and 1 Men, 1 Queries in total."
                android:textColor="@color/Black"
                android:textSize="16sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:stretchColumns="*">

                <TableRow android:layout_width="0dp">

                    <Button
                        android:id="@+id/btnLogbookNoThanks"
                        android:layout_marginRight="5dp"
                        android:background="@color/ButtonGray"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="No thanks"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:textSize="24sp" />

                    <Button
                        android:id="@+id/btnLogbookSendReport"
                        android:background="@color/ButtonOrange"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="Send report"
                        android:textAllCaps="false"
                        android:textColor="@color/Black"
                        android:textSize="24sp" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>