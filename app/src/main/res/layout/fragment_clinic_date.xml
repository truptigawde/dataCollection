<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Transparent"
    android:orientation="vertical"
    tools:context=".fragments.ClinicDateFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="Date of clinic session"
        android:textColor="@color/Black"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/textClinicDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@layout/my_edit_text_border"
        android:hint="Select clinic session date"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:textColorHint="@color/EditTextHintGray"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/btnNextClinicDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:background="@color/ButtonOrange"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Clinic details"
            android:textColor="@color/Black"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="1dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/ic_next_arrow_black"
            android:tint="@color/Black" />
    </LinearLayout>

</LinearLayout>